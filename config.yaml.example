# Domain Monitor Configuration Example
# Rename to config.yaml to use

general:
  # Days threshold for expiration alerts
  alert_days: 30
  
  # Log file location (comment out to disable file logging)
  log_file: /var/log/domain_monitor.log
  
  # Database file for tracking nameserver changes
  db_path: domain_monitor.db
  
  # Path to the file containing domains to check (one per line)
  domains_file: domains.txt
  
  # Rate limiting settings for WHOIS queries
  query_delay: 2.0    # Base delay between queries in seconds
  query_jitter: 1.0   # Random jitter added to delay (0-1.0)
  max_retries: 3      # Maximum retries for rate-limited queries
  
  # Cache settings for domain WHOIS data
  cache_hours: 24     # Hours to cache domain WHOIS data before re-checking

# Alert conditions configuration
alert_conditions:
  # Domain statuses that trigger alerts
  # Default list includes critical statuses only
  # You can add 'autoRenewPeriod' or 'renewPeriod' if you want alerts for these
  concerning_statuses:
    - redemptionPeriod
    - inactive
    - pendingDelete
    - pendingTransfer
    - clientHold
    - serverHold
    - serverRenewProhibited
    # - autoRenewPeriod    # Uncomment to get alerts during auto-renew period
    # - renewPeriod        # Uncomment to get alerts during renew period
  
  # Alert on DNS resolution changes (disabled by default)
  alert_on_resolution_changes:
    apex: false    # Alert when apex domain (e.g., example.com) resolution changes
    www: false     # Alert when www subdomain resolution changes
  
  # Alert on nameserver changes (enabled by default)
  alert_on_nameserver_changes: true

email:
  # Enable/disable email alerts
  enabled: true
  
  # SMTP server configuration
  smtp_server: smtp.example.com
  smtp_port: 587
  username: your_username
  password: your_password
  
  # Email addresses
  from_address: monitor@example.com
  to_addresses:
    - admin@example.com
    - webmaster@example.com
  
  # Email subject prefix
  subject_prefix: '[Domain Monitor]'